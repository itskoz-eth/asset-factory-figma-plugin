{
  "name": "figma-asset-factory",
  "version": "1.0.0",
  "description": "White-label Figma plugin for scalable brand asset creation",
  "main": "dist/code.js",
  "scripts": {
    "build": "npm run build:ui && npm run build:code",
    "build:ui": "esbuild src/ui/index.tsx --bundle --outfile=dist/ui.js --loader:.tsx=tsx --loader:.ts=ts",
    "build:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2017",
    "watch": "concurrently \"npm run watch:ui\" \"npm run watch:code\"",
    "watch:ui": "esbuild src/ui/index.tsx --bundle --outfile=dist/ui.js --watch --loader:.tsx=tsx",
    "watch:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --watch --target=es2017"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.89.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "figma",
    "plugin",
    "asset-factory",
    "brand",
    "design-automation",
    "white-label"
  ],
  "license": "MIT"
}